[core]
	editor = nvim

[user]
	name = Sergio Dobri
	email = sergiodobri@gmail.com
	signingkey = /home/sd/.ssh/id_ed25519
	
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[filter "git-ignore"]
	clean = "sed '/#\\s*git-ignore$/d'"
	smudge = cat	

[commit]
  gpgsign = true
  
[gpg]
	format = ssh

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[advice]
	detachedHead = false
